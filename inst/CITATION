  note     = "R package version 0.1.3",
  textVersion = paste(
  "Schramm, Michael (2021). ",
  "rATTAINS: Access EPA 'ATTAINS' Data. ",
  "R package version 0.1.3.",
  "doi:10.5281/zenodo.3635017",
  "https://CRAN.R-project.org/package=rATTAINS"
  )
)
